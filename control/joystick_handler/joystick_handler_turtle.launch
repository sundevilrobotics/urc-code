<launch>
 <!-- Turtlesim Node-->
  <!-- <node pkg="turtlesim" type="turtlesim_node" name="sim"/> -->

 <!-- joy node -->
 <group>
     <remap from='joy' to='joy0'/>
     <node pkg='joy' name='joy0' type='joy_node'>
         <param name='dev' type='string' value='/dev/SDRCDualshock4'/>
     </node>
 </group>

 <!-- <group>
     <remap from='joy' to='joy1'/>
